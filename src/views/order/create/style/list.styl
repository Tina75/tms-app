.list
  background #ffffff

  .list-item
    display flex
    align-items center
    height 60px
    padding 0 15px

    .item-icon
      flex none
      width 40px
      height 40px
      margin-right 15px
      border-radius 50%
      line-height 40px
      text-align center
      background #E4E7EC

    .item-info
      flex none
      display flex
      flex-direction column
      justify-content space-between
      width calc(100% - 55px)
      height 60px
      padding 10px 0

      p
        white-space nowrap
        overflow hidden
        text-overflow ellipsis

      &-title
        font-size 15px

      &-data
        color #999999